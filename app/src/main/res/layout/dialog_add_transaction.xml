<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:transitionGroup="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:transitionGroup="false">

            <EditText
                android:id="@+id/transactionNameEditText"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/date_selection_background"
                android:ems="10"
                android:fontFamily="@font/nanumsquareneo_regular"
                android:gravity="left|center_vertical"
                android:hint="제품명"
                android:inputType="text"
                android:padding="10dp" />

            <EditText
                android:id="@+id/transactionItemCountEditText"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/date_selection_background"
                android:ems="10"
                android:fontFamily="@font/nanumsquareneo_regular"
                android:gravity="left|center_vertical"
                android:hint="수량"
                android:inputType="number"
                android:padding="10dp" />

            <EditText
                android:id="@+id/transactionItemPriceEditText"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/date_selection_background"
                android:ems="10"
                android:fontFamily="@font/nanumsquareneo_regular"
                android:gravity="left|center_vertical"
                android:hint="단가"
                android:inputType="number"
                android:padding="10dp" />

            <EditText
                android:id="@+id/transactionAmountReceivedEditText"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/date_selection_background"
                android:ems="10"
                android:fontFamily="@font/nanumsquareneo_regular"
                android:gravity="left|center_vertical"
                android:hint="받은 금액"
                android:inputType="number"
                android:padding="10dp" />

            <Button
                android:id="@+id/selectTransactionClientBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_round_primary20"
                android:fontFamily="@font/nanumsquareneo_bold"
                android:text="거래처 선택"
                android:textColor="@color/primary99"
                android:textSize="20sp" />

            <Button
                android:id="@+id/addTransactionBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_round_primary20"
                android:fontFamily="@font/nanumsquareneo_bold"
                android:text="거래 추가"
                android:textColor="@color/primary99"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>