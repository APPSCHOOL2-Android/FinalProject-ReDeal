<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".memo.PhotoMemoFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/photoMemoToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Theme.ReDeal.ToolbarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/arrow_back_ios_24px"
        app:title="포토 메모" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerColor="@color/primary20"
        app:dividerThickness="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photoMemoToolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clientProfileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="36dp"
        android:paddingTop="24dp"
        android:paddingBottom="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <ImageView
            android:id="@+id/clientProfileImageView"
            android:layout_width="66dp"
            android:layout_height="38dp"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_round_primary90"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/card_account_detail_24px_primary95" />

        <TextView
            android:id="@+id/clientNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/nanumsquareneo_regular"
            android:text="미래 기술 연구소"
            android:textColor="@color/text10"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/clientProfileImageView"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="미래 기술 연구소" />

        <TextView
            android:id="@+id/clientManagerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/nanumsquareneo_regular"
            android:text="하성진"
            android:textColor="@color/text50"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/clientProfileImageView"
            app:layout_constraintTop_toBottomOf="@+id/clientNameTextView"
            tools:text="하성진" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/photoMemoRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:transitionGroup="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clientProfileLayout"
        tools:itemCount="1"
        tools:listitem="@layout/row_photo_memo" />

    <ImageButton
        android:id="@+id/photoMemoAddBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/fab_round_primary80"
        android:elevation="6dp"
        android:src="@drawable/add_24px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>