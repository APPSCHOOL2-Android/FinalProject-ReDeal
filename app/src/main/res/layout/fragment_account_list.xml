<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".account.AccountListFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayoutAccountList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/materialToolbarAccountList"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/background"
            android:minHeight="?attr/actionBarSize"
            app:menu="@menu/toolbar_menu_account_list"
            app:title="리딜"
            app:titleTextAppearance="@style/account_list_toolbar_title_text_appearance" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primary20" />

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/imageViewAccountListUserThumb"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayoutAccountList"
        android:background="@color/primary70"
        android:src="@drawable/card_account_detail_24px_primary99" />

    <TextView
        android:id="@+id/textViewAccountListUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="임보성"
        android:fontFamily="@font/nanumsquareneo_regular"
        android:textColor="@color/text10"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/imageViewAccountListUserThumb"
        app:layout_constraintEnd_toStartOf="@id/tabLayoutAccountListState"
        app:layout_constraintTop_toTopOf="@id/imageViewAccountListUserThumb"
        app:layout_constraintBottom_toTopOf="@id/textViewAccountListUserInfo"/>

    <TextView
        android:id="@+id/textViewAccountListUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 정보"
        android:fontFamily="@font/nanumsquareneo_regular"
        android:textColor="@color/text50"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/textViewAccountListUserName"
        app:layout_constraintTop_toBottomOf="@id/textViewAccountListUserName"
        app:layout_constraintBottom_toBottomOf="@id/imageViewAccountListUserThumb"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutAccountListState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:background="@color/background"
        app:tabIndicatorColor="@color/primary20"
        app:tabPaddingStart="2dp"
        app:tabPaddingEnd="2dp"
        app:tabRippleColor="@color/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayoutAccountList">

<!--        <com.google.android.material.tabs.TabItem-->
<!--            android:id="@+id/tabItemAccountListFavorites"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout="@layout/tab_item_layout_account_list"/>-->

<!--        <com.google.android.material.tabs.TabItem-->
<!--            android:id="@+id/tabItemAccountListTrading"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout="@layout/tab_item_layout_account_list"/>-->

<!--        <com.google.android.material.tabs.TabItem-->
<!--            android:id="@+id/tabItemAccountListTry"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout="@layout/tab_item_layout_account_list"/>-->

<!--        <com.google.android.material.tabs.TabItem-->
<!--            android:id="@+id/tabItemAccountListStop"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout="@layout/tab_item_layout_account_list"/>-->

    </com.google.android.material.tabs.TabLayout>

    <include
        android:id="@+id/layoutAccountListSortReference"
        layout="@layout/tab_item_layout_account_list_sort"
        app:layout_constraintStart_toStartOf="@id/imageViewAccountListUserThumb"
        app:layout_constraintTop_toBottomOf="@id/imageViewAccountListUserThumb"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="28dp"/>

    <include
        android:id="@+id/layoutAccountListSortVisit"
        layout="@layout/tab_item_layout_account_list_sort"
        app:layout_constraintStart_toEndOf="@id/layoutAccountListSortReference"
        app:layout_constraintTop_toTopOf="@id/layoutAccountListSortReference"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="28dp"/>

    <include
        android:id="@+id/layoutAccountListSortContact"
        layout="@layout/tab_item_layout_account_list_sort"
        app:layout_constraintStart_toEndOf="@id/layoutAccountListSortVisit"
        app:layout_constraintTop_toTopOf="@id/layoutAccountListSortVisit"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="28dp"/>

    <include
        android:id="@+id/layoutAccountListSortRegister"
        layout="@layout/tab_item_layout_account_list_sort"
        app:layout_constraintStart_toEndOf="@id/layoutAccountListSortContact"
        app:layout_constraintTop_toTopOf="@id/layoutAccountListSortContact"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="28dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAccountList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="@id/layoutAccountListSortReference"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutAccountListSortReference"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/row_item_account_list"/>
    
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAccountListAddAccount"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/primary80"
        android:foreground="@drawable/fab_account_list_person_add"/>

</androidx.constraintlayout.widget.ConstraintLayout>