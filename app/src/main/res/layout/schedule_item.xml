<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <TextView
        android:id="@+id/scheduleClientName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/nanumsquareneo_regular"
        android:text="라이온"
        android:textColor="@color/text10"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/scheduleClinetState"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/scheduleClinetState"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/client_state_circle_trading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scheduleClientManagerName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/nanumsquareneo_regular"
        android:text="김대리"
        android:textColor="@color/text10"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/scheduleClientName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scheduleName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:text="판매 자료 엑셀 정리 후 보내기"
        android:textColor="@color/text50"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/scheduleClientName"
        app:layout_constraintTop_toBottomOf="@+id/scheduleClientName" />

    <TextView
        android:id="@+id/scheduleTime"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="12dp"
        android:text="14 : 30"
        android:textColor="@color/primary10"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/scheduleClientManagerName"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_round_primary20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/scheduleTime"
        app:layout_constraintTop_toBottomOf="@+id/scheduleTime"
        app:srcCompat="@drawable/done_24px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text80"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"></LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>