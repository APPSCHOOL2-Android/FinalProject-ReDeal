<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/background"
    android:orientation="vertical"
    tools:context=".map.fragment.MapFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.search.SearchBar
                android:id="@+id/mapSearchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:defaultMarginsEnabled="false">

            </com.google.android.material.search.SearchBar>

            <Button
                android:id="@+id/mapBtnSearchRegion"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:elegantTextHeight="false"
                android:fontFamily="@font/nanumsquareneo_bold"
                android:text="지역 검색"
                android:textSize="12sp"
                app:cornerRadius="4dp" />

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/mapFAB"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:clickable="true"
            android:src="@drawable/my_location_24"
            app:backgroundTint="@color/background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.kakao.vectormap.MapView
            android:id="@+id/mapKakao"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </com.kakao.vectormap.MapView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/mapBottomSheet"
        layout="@layout/fragment_map_bottom_sheet" />



</androidx.coordinatorlayout.widget.CoordinatorLayout>