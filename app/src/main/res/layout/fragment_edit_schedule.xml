<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".schedule.MakeScheduleFragment" >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/editScheduleAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/editScheduleToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:clickable="true"
            android:minHeight="?attr/actionBarSize"
            app:itemIconTint="@color/primary20"
            app:navigationIcon="@drawable/arrow_back_ios_24px"
            app:navigationIconTint="@color/primary20"
            app:title="일정 편집"
            app:titleCentered="false"
            app:titleTextAppearance="@style/Theme.ReDeal.ToolbarTheme"
            app:titleTextColor="@color/primary20" />

        <View
            android:id="@+id/editScheduleToolbarDivider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primary20" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/editScheduleBtnVisit"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elegantTextHeight="false"
                    android:fontFamily="@font/nanumsquareneo_regular"
                    android:text="방문 일정"
                    android:textSize="16sp"
                    app:cornerRadius="5dp"
                    app:strokeColor="@color/primary20" />

                <Button
                    android:id="@+id/editScheduleBtnNotVisit"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:elegantTextHeight="false"
                    android:fontFamily="@font/nanumsquareneo_regular"
                    android:text="미방문 일정"
                    android:textSize="16sp"
                    app:cornerRadius="5dp"
                    app:strokeColor="@color/primary20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumsquareneo_bold"
                    android:text="거래처를 선택해주세요."
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/editScheduleBtnSelectAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_round_primary20"
                    android:padding="4dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/card_account_detail_24px_primary99" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumsquareneo_bold"
                    android:text="일정 선택"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/editScheduleBtnSelectCalendar"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareneo_regular"
                    android:text="2023.09.08"
                    android:textSize="16sp"
                    app:cornerRadius="5dp"
                    app:strokeColor="@color/primary20" />

                <Button
                    android:id="@+id/editScheduleBtnSelectTime"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/nanumsquareneo_regular"
                    android:text="오후 2:30"
                    android:textSize="16sp"
                    app:cornerRadius="5dp"
                    app:strokeColor="@color/primary20" />
            </LinearLayout>


            <com.hifi.redeal.schedule.CustomTimePicker
                android:id="@+id/editScheduleTimePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editScheduleLayoutScheduleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editScheduleEditTextScheduleTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareneo_regular"
                    android:hint="일정 제목"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editScheduleLayoutScheduleContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editScheduleEditTextScheduleContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareneo_regular"
                    android:hint="일정 내용"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/editScheduleBtnComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/btn_round_primary20"
        android:text="일정 수정"
        android:textSize="20sp" />

</LinearLayout>